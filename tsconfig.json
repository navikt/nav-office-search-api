{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "target": "es2017",
  },
  "include": [
    "**/*.js",
    "**/*.ts",
  ]
}
